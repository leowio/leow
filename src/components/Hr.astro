---
export interface Props {
  noPadding?: boolean;
  ariaHidden?: boolean;
}

const { noPadding = false, ariaHidden = true } = Astro.props;
---

<div
  class={`max-w-3xl mx-auto underline decoration-dashed ${noPadding ? "px-0" : "px-4"}`}
>
  <hr class="border-0 border-b-2 border-skin-line" aria-hidden={ariaHidden} />
</div>
